{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "build",
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@/*": [
                "*"
            ],
            "@/tests/*": [
                "../tests/*"
            ]
        }
    },
    "include": [
        "src",
        "tests"
    ]
}
